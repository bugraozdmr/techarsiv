@model CreateSubjectDto

@section Header
{
    <link rel="stylesheet" href="css/style4.css"/>
}

<div class="container">
    <div class=" text-center mt-5 ">
        <h1>Konu Oluştur</h1>
    </div>


    <div class="row ">
        <div class="col-lg-10 mx-auto">
            <div class="card mt-2 mx-auto p-4 bg-light">
                <div class="card-body bg-light">
                    <div class="container">
                        <form asp-action="Create" method="post">
                            <div class="text-danger" asp-validation-summary="All"></div>
                            <input type="hidden" name="Name" value="@User.Identity.Name"/>
                            <div class="controls">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="form_name">Başlık *</label>
                                            <input type="text" class="form-control" placeholder="Konu başlığı *" required="required" asp-for="Title">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Ön ek</label>
                                            <input class="form-control" asp-for="prefix">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Konu Seçiniz *</label>
                                            <select class="form-control my-3"
                                                    asp-items="@ViewBag.Categories" asp-for="categoryId"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="form_message">Konu *</label>
                                            <textarea class="form-control" asp-for="Content"></textarea>
                                        </div>

                                    </div>


                                    <div class="col-md-12 text-center">
                                        <button type="submit" class="btn btn-success btn-send pt-2 btn-block mt-2">Konu Oluştur</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/6.8.3/tinymce.min.js" integrity="sha512-VCEWnpOl7PIhbYMcb64pqGZYez41C2uws/M/mDdGPy+vtEJHd9BqbShE4/VNnnZdr7YCPOjd+CBmYca/7WWWCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        tinymce.init({
            selector : '#Content'
        });
    </script>
}
    