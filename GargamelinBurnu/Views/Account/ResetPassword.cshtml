@model ResetPasswordModel

@{
    ViewData["Title"] = "Şifre Sıfırlama"; 
}

<div class="text-center">
    <h6 class="display-6">
        Şifre Sıfırlama
    </h6>
</div>

<form method="post" asp-action="ResetPassword">
    <div class="text-danger my-3" asp-validation-summary="All"></div>
    
    <input type="hidden" asp-for="Token"/>
    <input type="hidden" asp-for="Id"/>
    
    <div class="form-group">
        <label>Yeni Şifre</label>
        <input class="form-control" asp-for="Password" aria-describedby="emailHelp" placeholder="şifre">
    </div>
    <div class="form-group">
        <label>Yeni Şifre Tekrar</label>
        <input class="form-control" asp-for="ConfirmPassword" aria-describedby="emailHelp" placeholder="şifre">
    </div>
    
    <button type="submit" class="btn btn-primary my-3">Gönder</button>
</form>