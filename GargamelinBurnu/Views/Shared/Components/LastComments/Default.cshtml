@model List<CommentCardViewModel>

<div class="card-body">
    @if (Model.Count != 0 || Model.Count != null)
    {
        @foreach (var item in Model)
        {
            <h5 class="card-title"><a asp-action="Details" asp-controller="Subject"
                                      asp-route-url="@item.Url"
                                      style="text-decoration: none">@item.SubjectTitle</a></h5>
            <p class="card-text">@item.username - @await Component.InvokeAsync("ShowTime",@item.CreatedAt)
                - @item.CategoryName</p>
    
        }   
    }
    else
    {
        <h4>Son mesaj yok</h4>
    }
</div>