@model List<TitleViewModel>




@if (Model.Count().Equals(0) || Model is null)
{
    <div class="text-secondary">Gösterilecek yorum bulunamadı</div>
}
else
{
    @foreach (var item in Model)
    {
        <div class="card p-3 mt-2">
            <div class="d-flex justify-content-between align-items-center">
                <div class="user d-flex flex-row align-items-center">
                    <img src="#" width="30" class="user-img rounded-circle mr-2">
                    <span>
                        <b class="font-weight-bold text-dark"><a 
                                                                  data-toggle="tooltip"
                                                                  data-popper-placement="top"
                                                                  title="@(item.Content.Length > 30 ? item.Content.Substring(0, 30) + "..." : item.Content)"
                                                                  asp-action="Details"
                                                                  asp-controller="Subject"
                                                                  asp-route-url="@item.Url"
                                                                  style="text-decoration: none!important;}">@item.Title</a></b>
                    </span>
                </div>
                <!--<small>@item.CommentCount yorum</small>-->
            </div>

            <div class="action d-flex justify-content-between mt-2 align-items-center">
                <div class="reply px-4">
                    <small class="font-weight-bold text-primary">@item.Username</small>
                    <span class="dots"></span>
                    <small>- @await Component.InvokeAsync("ShowTime",item.createdAt) -</small>
                    <span class="dots"></span>
                    <small>@item.CategoryName</small>
                </div>
            
            </div>
        </div>
    }
}
