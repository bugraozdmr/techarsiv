@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BanCauseDto

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@Model.username cezalandırılma sebebi</h1>
    </div>

    <div class="mt-3">
        <div class="card">
            <div class="card-body">
                <form method="post" asp-action="Index" asp-route-username="@Model.username">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" value="swear" asp-for="Cause">
                        <label class="form-check-label">
                            Küfürlü yorum
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" value="wrongSubject" asp-for="Cause">
                        <label class="form-check-label">
                            Yanlış konu açma
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" value="inappropriatePhoto" asp-for="Cause">
                        <label class="form-check-label">
                            Uygunsuz profil fotoğrafı
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" value="inappropriateUsername" asp-for="Cause">
                        <label class="form-check-label">
                            Uygunsuz kullanıcı ismi
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" value="anotherLang" asp-for="Cause">
                        <label class="form-check-label">
                            Başka dil kullanması
                        </label>
                    </div>

                    <div class="text-center mt-2">
                        <button type="submit" class="btn btn-outline-dark">Gönder</button>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
</div>