@model LoginModel

<div class="container my-4">

  <h4 class="display-6 text-center">
    <i class="fas fa-sign-in text-white bg-secondary rounded-3"></i>
    <br>
    Giriş Yap
  </h4>
  <!-- Pills content -->
  <div class="tab-content">
    <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
      
      <form method="post" asp-action="Login">
        <div class="text-danger" style="list-style: none" asp-validation-summary="All"></div>  
        
        <div class="form-outline mb-4">
          <label class="form-label" asp-for="Username"></label>
          <input asp-for="Username" class="form-control"/>
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
          <label class="form-label" asp-for="Password"></label>
          <input asp-for="Password" class="form-control"/>
        </div>

        <!-- 2 column grid layout -->
        <div class="row mb-4">
          
          <div class="col-md-6 d-flex justify-content-center">
            <div class="form-check mb-3 mb-md-0">
              <input type="checkbox" class="form-check-input" asp-for="RememberMe">
              <label class="form-check-label">Beni hatırla</label>
            </div>
          </div>
          
    
          <div class="col-md-6 d-flex justify-content-center">
            <a asp-action="ForgotPassword">Şifremi unuttum</a>
          </div>
        </div>


        <div class="text-center">
          <p>Hesabın yok mu? <a asp-action="Register">Kayıt Ol</a></p>
        </div>
        
        
        <div class="text-center">
          <button type="submit" class="btn btn-primary btn-block mb-4">Giriş Yap</button>
        </div>
      </form>
    </div>
  </div>
</div>