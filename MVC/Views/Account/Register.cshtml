@model RegisterDto

<div class="container my-4">

    <h4 class="display-6 text-center">
        <i class="fas fa-sign-in text-white bg-secondary rounded-3"></i>
        <br>
        Giriş Yap
    </h4>
    <!-- Pills content -->
    <div class="tab-content">
        <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
      
            <form method="post" asp-action="Register">
                <div class="text-danger" style="list-style: none" asp-validation-summary="All"></div>  
        
                <div class="form-outline mb-4">
                    <label class="form-label" asp-for="Username"></label>
                    <input asp-for="Username" class="form-control"/>
                </div>
                
                <div class="form-outline mb-4">
                    <label class="form-label" asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-control"/>
                </div>
                
                <div class="form-outline mb-4">
                    <label class="form-label" asp-for="Email"></label>
                    <input asp-for="Email" class="form-control"/>
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <label class="form-label" asp-for="Password"></label>
                    <input asp-for="Password" class="form-control"/>
                </div>

                <div class="form-outline mb-4">
                    <label class="form-label" asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control"/>
                </div>
                

                <div class="text-center">
                    <p>Hesabın var mı? <a asp-action="Login">Giriş Yap</a></p>
                </div>
        
        
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-block mb-4">Kayıt Ol</button>
                </div>
            </form>
        </div>
    </div>
</div>