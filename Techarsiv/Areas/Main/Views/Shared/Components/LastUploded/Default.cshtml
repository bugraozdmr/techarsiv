@model List<ArticleViewModel>


<div class="mt-2">
    <p class="text-center" style="font-size: 1.2rem; font-weight: normal;">Son eklenen <span style="color: red;">yazılar</span></p>
</div>


@foreach (var item in Model)
{
    <hr/>
    <div class="mt-2 mx-1">
        <div class="mt-2">
            <div style="position: relative; width: 100%;">
                <a asp-area="Main" asp-controller="Home" asp-action="ArticlePage"
                   asp-route-url="@item.Url"
                   title="yazıya gitmek için tıkla">
                    <img src="@item.imageUrl" class="mx-auto" style="width: 100%; height: 160px; border-radius: 10px;">
                </a>
                <span style="position: absolute; bottom: 10px; right: 10px; padding: 5px; background-color: rgba(0, 0, 0, 0.5); color: white; border-radius: 0 10px 0 0; font-size: 14px;">
                    @await Component.InvokeAsync("ShowTime", @item.createdAt)
                </span>
            </div>
                
            <div style='font-family: "Poppins", Arial, sans-serif;' class="mx-1 mt-1">
                <strong style="font-size: 20px;">
                    <a asp-area="Main" asp-controller="Home" asp-action="ArticlePage"
                       asp-route-url="@item.Url"
                       style="text-decoration: none;color: #333;"
                       title="yazıya gitmek için tıkla">
                        @item.Title    
                    </a>
                </strong>
            </div>
        </div>
    </div>
}
