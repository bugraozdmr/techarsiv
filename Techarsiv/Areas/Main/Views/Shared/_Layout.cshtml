<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@ViewData["Title"] | TechArsiv</title>

    <link rel="icon" type="image/x-icon" href="~/favicon4.ico">
    @await RenderSectionAsync("Head", false)
    <link rel="stylesheet" asp-append-version="true" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    @await RenderSectionAsync("Header", false)
    <partial name="_navbar"/>

    <div class="container">
        <main role="main" class="pb-3">
            <div class="">
                @RenderBody()
            </div>
        </main>
    </div>


    <div class="footer">
        <footer class="py-3 my-4">
            <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                <li class="nav-item"><a href="/" class="nav-link px-2 text-muted">TechArsiv</a></li>
                <li class="nav-item"><a href="/forum" class="nav-link px-2 text-muted">Forum</a></li>

                <li class="nav-item">
                    <a asp-page="/About" aria-current="page" class="nav-link px-2 text-muted">Hakkında</a>
                </li>
            </ul>
            <p class="text-center text-muted">&copy; @DateTime.Now.Year techarsiv</p>
            <p class="text-center"><a asp-page="/confidentiality" aria-current="page"
                                      style="text-decoration: none;color: gray;font-size: 12px"
                                   >Gizlilik sözleşmesi</a></p>
            
        </footer>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
    <script asp-append-version="true" src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
