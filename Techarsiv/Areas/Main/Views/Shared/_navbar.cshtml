    string color;
    
    if (DateTime.Now.Hour >= 12 &&  DateTime.Now.Hour < 18)
    {
        color = colors[0];
    }
    else if (DateTime.Now.Hour >= 18 &&  DateTime.Now.Hour < 24)
    {
        color = colors[1];
    } 
    else if (DateTime.Now.Hour >= 0 &&  DateTime.Now.Hour < 6)
    {
        color = colors[2];
    } 
    else if (DateTime.Now.Hour >= 6 &&  DateTime.Now.Hour < 12)
    {
        color = colors[3];
    }
    else
    {
        color = colors[3];
    }
}
