@model EditQuestionViewModel


@{
    ViewData["Title"] = "Soruyu düzenle";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Düzenle</h1>
    </div>
    
    <form method="post" asp-action="Edit" asp-controller="Question" asp-area="Admin" enctype="multipart/form-data">
        <div class="text-danger" asp-validation-summary="All"></div>
        <input type="hidden" asp-for="QuestionId" value="@Model.QuestionId"/>
        
        <div class="mb-3">
          <label for="formFile" class="form-label">Resim seç</label>
          <input class="form-control" type="file" id="formFile" name="file">
        </div>
        
        
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Soru</label>
            <input class="form-control" id="exampleFormControlInput1" placeholder="Soru" asp-for="questionDesc">
        </div>
        
        <div class="mb-3">
            <label class="form-label">Doğru Cevap</label>
            <div>
                <label>
                    <input type="radio" asp-for="RightAnswer" value="1"/>
                    A
                </label>
            </div>
            <div>
                <label>
                    <input type="radio" asp-for="RightAnswer" value="2"/>
                    B
                </label>
            </div>
            <div>
                <label>
                    <input type="radio" asp-for="RightAnswer" value="3"/>
                    C
                </label>
            </div>
            <div>
                <label>
                    <input type="radio" asp-for="RightAnswer" value="4"/>
                    D
                </label>
            </div>
        </div>
        
        <div class="form-group">
            <div class="mb-3">
                <label>A şıkkı</label>
                <input class="form-control" asp-for="ChoiceA"></input>
            </div>
            <div class="mb-3">
                <label>B şıkkı</label>
                <input class="form-control" asp-for="ChoiceB"></input>
            </div>
            <div class="mb-3">
                <label>C şıkkı</label>
                <input class="form-control" asp-for="ChoiceC"></input>
            </div>
            <div class="mb-3">
                <label>D şıkkı</label>
                <input class="form-control" asp-for="ChoiceD"></input>
            </div>
            
        </div>
        
        
        <div class="text-center">
            <button type="submit" class="btn btn-outline-secondary">Gönder</button>
        </div>
    </form>
</div>

