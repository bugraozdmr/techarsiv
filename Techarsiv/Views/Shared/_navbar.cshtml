<header>
    
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/forum">
                TechArsiv
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/"
                           title="ana sayfaya gider">
                            <strong class="mt-3">
                                <i class="fa fa-home" style="font-size: 1.4rem"></i>
                            </strong>
                        </a>
                    </li>
                    <!--<li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Question"
                           title="tüm soruları gör">Sorular</a>
                    </li>-->
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Users" asp-controller="Home"
                           title="tüm kullanıcıları gör">Kullanıcılar</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside"
                               title="açılır menu">
                                Sosyal
                            </a>

                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                                <li>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="userSubjects"
                                       title="kullanıcı konularını gör">
                                        <b>Kullanıcı konuları</b>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-action="followedSubjects" asp-controller="Home"
                                       title="takip edilen konuları gör">
                                        <b>Takip edilen konular</b>
                                    </a>
                                </li>
                            </ul>

                        </li>
                    }
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-action="Login" asp-controller="Account"
                               title="giriş yap sayfasına gider">Giriş Yap</a>
                        </li>
                    }
                    else
                    {
                        
                        // düzeltilmeli
                        if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link active"
                                   asp-area="Admin"
                                   asp-controller="Panel" 
                                   asp-action="Index"
                                   title="panel sayfasına gider">Panel</a> 
                            </li>   
                        }
                        <li class="nav-item">
                            <a class="nav-link active"
                               asp-controller="User"
                               asp-action="Index" asp-route-username="@User.Identity.Name"
                               aria-current="page"
                               title="Kullanıcı profiline gider">@User.Identity.Name</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active"
                               asp-controller="Notification"
                               asp-action="notifications"
                               aria-current="page"
                               title="bildirimler sayfasına gider">

                                <i class="fa fa-envelope"></i>
                                <span class="badge rounded-pill badge-notification bg-danger">
                                    @await Component.InvokeAsync("NotificationCount")
                                </span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-action="Logout" asp-controller="Account"
                               title="çıkış yapar">Çıkış Yap</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
