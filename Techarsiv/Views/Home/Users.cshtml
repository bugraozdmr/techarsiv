@model UsersViewModel

@{
    ViewData["Title"] = "Kullanıcılar";
}

@section Head
{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/userPage.css"></link>
    
}


<!-- en çok puan kullanıcılar -->
<div class="mt-3 mb-2 text-center">
    <div class="display-6" style="font-weight: bold; font-size: 2rem; font-style: italic;">
        En çok puana sahip kullanıcılar
    </div>
</div>

<div class="row">
    @foreach (var item in Model.MostPoint)
    {
    <div class="col-xl-3 col-lg-6 mb-1">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <img
                        src="@item.UserImage"
                        alt=""
                        style="width: 45px; height: 45px"
                        class="rounded-circle"/>
                    <div class="ms-3">
                        <p class="fw-bold mb-1">
                            <a asp-controller="User" asp-action="Index" asp-route-username="@item.Username"
                               style="text-decoration: none; @if (item.Points >= 0 && item.Points < 30) { <text>color: gray;</text> }else if (item.Points >= 30 && item.Points < 100) { <text>color: blue;</text> }else if (item.Points >= 30 && item.Points < 100) { <text>color: orange;</text> }else if (item.Points > 100) { <text>color: red;</text> }">
                            @item.Username
                            </a>
                        </p>
                        <p class="text-muted mb-0">@item.Points</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
</div>

<!-- yorum kullanıcılar -->
<div class="mt-3 mb-2 text-center">
    <div class="display-6" style="font-weight: bold; font-size: 2rem; font-style: italic;">
        En çok yoruma sahip kullanıcılar
    </div>
</div>

<div class="row">
    @foreach (var item in Model.MostComments)
    {
    <div class="col-xl-3 col-lg-6 mb-1">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <img
                        src="@item.UserImage"
                        alt=""
                        style="width: 45px; height: 45px"
                        class="rounded-circle"/>
                    <div class="ms-3">
                        <p class="fw-bold mb-1">
                            <a asp-controller="User" asp-action="Index" asp-route-username="@item.Username"
                               style="text-decoration: none; @if (item.Points >= 0 && item.Points < 30) { <text>color: gray;</text> }else if (item.Points >= 30 && item.Points < 100) { <text>color: blue;</text> }else if (item.Points >= 30 && item.Points < 100) { <text>color: orange;</text> }else if (item.Points > 100) { <text>color: red;</text> }">
                                @item.Username
                            </a>
                        </p>
                        <p class="text-muted mb-0">@item.CommentCount</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
</div>


<!-- son kullanıcılar -->
<div class="mt-3 mb-2 text-center">
    <div class="display-6" style="font-weight: bold; font-size: 2rem; font-style: italic;">
        Son kayıt olan kullanıcılar
    </div>
</div>

<div class="row">
    @foreach (var item in Model.LastUsers)
    {
    <div class="col-xl-3 col-lg-6 mb-1">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <img
                        src="@item.UserImage"
                        alt=""
                        style="width: 45px; height: 45px"
                        class="rounded-circle"/>
                    <div class="ms-3">
                        <p class="fw-bold mb-1">
                            <a asp-controller="User" asp-action="Index" asp-route-username="@item.Username"
                               style="text-decoration: none;color: gray">
                                @item.Username
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
</div>