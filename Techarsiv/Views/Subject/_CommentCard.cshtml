@model CommentViewModel




<div class="d-flex flex-column my-2" id="comment-container">
    <div class="bg-white">
        <div class="flex-row d-flex">
            <img src="dp.jpg" width="40" class="rounded-circle mt-2">
            <div class="d-flex flex-column justify-content-start ml-2">
                <span class="d-block font-weight-bold name">@Model.CommentUserName</span>
                <span class="date text-black-50">Katılma Tarihi : @Model.CreatedAt.ToString("d")</span>
                <span class="date text-black-50">Mesaj Sayısı : @Model.UserCommentCount</span>
            </div>
        </div>
        <div class="mt-3">
            <p class="comment-text">@Model.Content</p>
        </div>
    </div>
    <div class="bg-white">
        <div class="d-flex flex-row fs-14">
            <div class="p-2 cursor p-2">
                <a 
                    data-toggle="tooltip"
                    data-popper-placement="top"
                    title="Beğen"
                    id="comment_@Model.CommentId-325_like"
                    title="yorumu beğenmek için tıkla"><!-- carefull _like-->
                    <i id="like_icon_@Model.CommentId-445" class="fa fa-thumbs-o-up @(Model.isLiked ? "text-danger" : "")"></i> 
                    <span id="like_count_@Model.CommentId-878">@Model.likeCount</span>

                </a>
                <br/>
                <span class="text-danger" id="err_@Model.CommentId-400"></span>
            </div>
            <div class="p-2 cursor p-2">
                <a data-toggle="tooltip"
                   data-popper-placement="top"
                   title="Beğenme"
                   id="comment_@Model.CommentId-967_dislike"
                   title="yorumu beğenmemek için tıkla">
                    <i id="dislike_icon_@Model.CommentId-854" class="fa fa-thumbs-o-down @(Model.isdisLiked ? "text-danger" : "")"></i> 
                    <span id="dislike_count_@Model.CommentId-143">@Model.dislikeCount</span>
                </a>
                <br/>
                <span class="text-danger" id="err_@Model.CommentId-400"></span>
            </div>
        </div>
        <div class="text-muted">@await Component.InvokeAsync("ShowTime",Model.CommentDate)</div>
    </div>
</div>
