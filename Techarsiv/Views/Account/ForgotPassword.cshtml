@{
  ViewData["Title"] = "Şifremi Unuttum";
}

@section Head
{
  <link rel="stylesheet" href="~/css/app.css">
}

<div class="logReg mt-4">
  <div class="wrapper">
    @if (TempData["message_reset"] is not null)
    {
      <div class="text-warning mb-3">@TempData["message_reset"]</div>
    }

    
    
    <div class="">
      <div class="">
        <div class="title">Şifre Sıfırlama</div>
        <form class="flip-card__form" method="post" asp-action="ForgotPassword">
          <div class="text-danger" asp-validation-summary="All"></div>
          <input class="flip-card__input" name="Email" type="email" placeholder="email">
          <button class="flip-card__btn" type="submit">Sıfırla</button>
        </form>
      </div>
    </div>
  
  </div>
</div>
