@{
    ViewData["Title"] = "Mail gelmedi";
}

@section Head
{
    <link rel="stylesheet" href="~/css/app.css">
}

<div class="logReg mt-4">
    <div class="wrapper">
        @if (TempData["message_reset"] is not null)
        {
            <div class="text-warning mb-3">@TempData["message_resend"]</div>
        }

    
    
        <div class="">
            <div class="">
                <div class="title">Maili tekrar gönder<br><small>Mail sunucumuzdan kaynaklı mail ulaşmadıysa tekrar göndermeyi deneyin.Başka zamanlarda denemek mail gelme olasılığını arttırır.</small></div>
                <form class="flip-card__form" method="post" asp-action="resendMail">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <input class="flip-card__input" name="Email" type="email" placeholder="email">
                    <button class="flip-card__btn" type="submit">Gönder</button>
                </form>
            </div>
        </div>
  
    </div>
</div>